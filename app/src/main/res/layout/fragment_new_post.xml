<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="35sp"
        android:text="New Issue"/>

    <TextView
        android:layout_marginTop="@dimen/actions_padding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#333333"
        android:text="Title"/>


    <EditText
        android:id="@+id/new_post_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Post Title"
        android:inputType="text"/>
    
    <TextView
        android:layout_marginTop="@dimen/actions_padding_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#333333"
        android:text="Content"/>

    <EditText
        android:id="@+id/new_post_content"
        android:hint="Enter Post Content"
        android:lines="4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top|start"/>

    <Button
        android:id="@+id/send_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FF2DBE60"
        android:textColor="#FFFFFFFF"
        android:text="Send"/>

</LinearLayout>